<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemViewHookContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHookItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:contentPadding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHookItemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivExpanderHookItem"
                android:layout_width="30dp"
                android:layout_height="?android:attr/listPreferredItemHeightSmall"
                android:alpha="0.5"
                android:clickable="true"
                android:focusable="true"
                android:src="?attr/expander"
                app:layout_constraintBottom_toBottomOf="@+id/tvHookSubInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvHookId" />

            <TextView
                android:id="@+id/tvHookId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"

                android:ellipsize="end"
                android:maxLines="3"

                android:text="Hook ID"
                android:textAppearance="@android:style/TextAppearance.Medium"
                app:layout_constraintEnd_toStartOf="@+id/ivActionNeeded"
                app:layout_constraintStart_toEndOf="@+id/ivExpanderHookItem"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvHookSubInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Group / Collection"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toEndOf="@+id/ivExpanderHookItem"
                app:layout_constraintTop_toBottomOf="@+id/tvHookId" />

            <CheckBox
                android:id="@+id/cbHookItemEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvHookId" />

            <ImageView
                android:id="@+id/ivActionNeeded"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tvHookId"
                app:layout_constraintEnd_toStartOf="@+id/cbHookItemEnabled"
                app:layout_constraintTop_toTopOf="@+id/tvHookId" />

            <!-- Expanded Content Section -->
            <LinearLayout
                android:id="@+id/llHookExpandedContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingBottom="4dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tvHookSubInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/tvHookNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hook_label_name"
                        android:textStyle="bold|italic"
                        android:textAppearance="@android:style/TextAppearance.Small" />
                    <TextView
                        android:id="@+id/tvHookName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:ellipsize="end"
                        android:maxLines="3" />
                </LinearLayout>

                <!-- Author -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/tvHookAuthorLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hook_label_author"
                        android:textStyle="bold|italic"
                        android:textAppearance="@android:style/TextAppearance.Small" />
                    <TextView
                        android:id="@+id/tvHookAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>

                <!-- Class -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/tvHookClassLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hook_label_class"
                        android:textStyle="bold|italic"
                        android:textAppearance="@android:style/TextAppearance.Small" />
                    <TextView
                        android:id="@+id/tvHookClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:ellipsize="end"
                        android:maxLines="3" />
                </LinearLayout>

                <!-- Method -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/tvHookMethodLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hook_label_method"
                        android:textStyle="bold|italic"
                        android:textAppearance="@android:style/TextAppearance.Small" />
                    <TextView
                        android:id="@+id/tvHookMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>

                <!-- SDK -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/tvHookSdkLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hook_label_sdk"
                        android:textStyle="bold|italic"
                        android:textAppearance="@android:style/TextAppearance.Small" />
                    <TextView
                        android:id="@+id/tvHookSdk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>

                <!-- Version -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/tvHookVersionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hook_label_version"
                        android:textStyle="bold|italic"
                        android:textAppearance="@android:style/TextAppearance.Small" />
                    <TextView
                        android:id="@+id/tvHookVersion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>

                <!-- Description -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="6dp">
                    <TextView
                        android:id="@+id/tvHookDescriptionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hook_label_description"
                        android:textStyle="bold|italic"
                        android:textAppearance="@android:style/TextAppearance.Small" />
                    <TextView
                        android:id="@+id/tvHookDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:ellipsize="end"
                        android:maxLines="4" />
                </LinearLayout>

                <!-- Checkboxes row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <CheckBox
                        android:id="@+id/cbHookOptional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hook_label_optional"
                        android:textAppearance="@android:style/TextAppearance.Small" />

                    <CheckBox
                        android:id="@+id/cbHookUsage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hook_label_usage"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@android:style/TextAppearance.Small" />

                    <CheckBox
                        android:id="@+id/cbHookNotify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hook_label_notify"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@android:style/TextAppearance.Small" />
                </LinearLayout>

                <!-- Action Buttons Section -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <HorizontalScrollView
                        android:id="@+id/horizontalButtonScroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:fadingEdgeLength="0dp"
                        android:overScrollMode="always">

                        <LinearLayout
                            android:id="@+id/buttonContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingEnd="40dp"/>

                    </HorizontalScrollView>

                    <ImageView
                        android:id="@+id/ivButtonsExpander"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end|center_vertical"
                        android:src="?attr/expander"
                        android:padding="4dp"
                        android:visibility="gone"/>

                </FrameLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:visibility="gone"
                    app:alignItems="flex_start"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignContent="flex_start"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>