<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnFromFile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_corner"
            android:text="@string/button_config_from_file"
            android:textSize="10sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <Button
            android:id="@+id/btnToFile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_corner"
            android:text="@string/button_select_config"
            android:textSize="10sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <Button
            android:id="@+id/btnCreateConfig"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/rounded_corner"
            android:text="Create Config"
            android:textSize="10sp"
            android:paddingStart="10dp"
            android:visibility="invisible"
            android:paddingEnd="10dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_config_hint"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:textColor="?attr/colorTextOne"
        android:textColorHint="?attr/colorTextDivider"
        android:background="@drawable/rounded_edit_text"
        android:elevation="2dp"/>

    <ListView
        android:id="@+id/lvConfigs"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:choiceMode="singleChoice"
        android:dividerHeight="0.5dp"/>

</LinearLayout>