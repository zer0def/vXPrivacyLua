<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivDialogIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvHookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hook Name Example"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvHookGroupMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="This is a sample message that could span multiple lines explaining details about the hook group or providing important information to the user."
        android:textAppearance="@android:style/TextAppearance.Small"
        android:lineSpacingExtra="4dp" />

</LinearLayout>